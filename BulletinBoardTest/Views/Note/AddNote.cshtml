
@{
    Layout = null;
}
@using Microsoft.AspNetCore.Http
@model BulletinBoardTest.Models.Note
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BulletinBoard</title>
    <style>
        input[name=SelectedDate] + img {
            position: relative;
            top: 5px;
            left: 2px;
        }
    </style>
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        @*add link for trumbowyg*@
        <link rel="stylesheet" href="~/lib/trumbowyg/dist/ui/trumbowyg.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="Stylesheet" type="text/css" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Myanmar OCC Bulletin Board</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Note" asp-action="Index">Note List</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">

                    @if (Context.Session.GetInt32("USER_LOGIN_KEY") == null)
                    {
                        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
                        <li><a asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
                    }
                    else
                    {
                        <li><a asp-area="" asp-controller="Account" asp-action="Logout">LogOut</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @using (Html.BeginForm("AddNote", "Note", FormMethod.Post))
        {
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8">
                    <form class="form-horizontal" method="post" asp-controller="Note" asp-action="AddNote">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" class="form-control" asp-for="NoteTitle" placeholder="Input Title" />
                            <span class="text-danger" asp-validation-for="NoteTitle"></span>
                        </div>

                        <div class="form-group">
                            <textarea class="form-control editor" rows="20" asp-for="NoteContents" placeholder="Input Contents"></textarea>
                            <span class="text-danger" asp-validation-for="NoteContents "></span>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" asp-for="NoteDate" placeholder="Select Date" id="SelectedDate" />
                            
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Add</button>
                            <a class="btn btn-default" asp-controller="Note" asp-action="Index">Cancel</a>
                        </div>

                    </form>
                </div>
                <div class="col-lg-2"></div>
            </div>
        }
        <footer>
            <p>&copy; 2021 - Myanmar OCC</p>
        </footer>
    </div>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        @*add trumbowyg*@
        <script src="~/lib/trumbowyg/dist/trumbowyg.min.js"></script>
        @*add plugin for uploading images. After adding it, must config a file,trumbowyg.upload.js (server pate, fileFieldname *@
        <script src="~/lib/trumbowyg/dist/plugins/upload/trumbowyg.upload.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    <environment names="Development">
        <script src="~/js/jquery.min.js"></script>
        <!--<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>-->
        <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
        <script type="text/javascript">
            $(function () {
                $("#SelectedDate").datepicker({
                    showOn: 'button',
                    buttonImageOnly: true,
                    buttonImage: '/images/calendar.gif'
                });
            });
        </script>       
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
            asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
            asp-fallback-test="window.jQuery"
            crossorigin="anonymous"
            integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
    </script>-->
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    <environment names="JS">
        
    </environment>
</body>
</html>
