<table class="table table-bordered">
    <thead>
        <tr>
            <th>Number</th>
            <th>Title</th>
            <th>Writer</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in Model)
        {
        <tr>
            <td>@note.NoteNo</td>

            <td>
                <a asp-controller="Note" asp-action="Detail" asp-route-noteNo="@note.NoteNo">@note.NoteTitle</a>
            </td>

            <td>@note.UserName</td>
            <td>@note.NoteDate.ToString("yyyy-MM-dd")</td>
        </tr>
        }
    </tbody>
</table>

<a class="btn btn-warning" asp-controller="Note" asp-action="AddNote">Add Content</a>
